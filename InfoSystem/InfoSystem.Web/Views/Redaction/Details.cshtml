@model InfoSystem.Web.Models.Redaction.RedactionDetailModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SubpageLayout.cshtml";
}
<h1>Details</h1>
@Html.HiddenFor(model => model.Id)
<div>
    <h4>Redaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralEditor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralEditor)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralEditorCallNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralEditorCallNumber)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralEditorEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralEditorEmail)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
</div>

<div>

    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">
            Edit
        </a>
        <span id="confirmDeleteSpan" style="display:none">
            <span>Are you sure you want to delete this redaction?</span>
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="#" class="btn btn-primary" onclick="confirmDelete(false)">No</a>
        </span>
        <span id="deleteSpan">
            <a href="#" class="btn btn-danger" onclick="confirmDelete(true)">Delete</a>
        </span>

        <a asp-action="Index" class="btn btn-primary">
            Back to List
        </a>
    </form>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}