@model InfoSystem.Web.Models.Users.UserChangePasswordModel

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_SubpageLayout.cshtml";
}

<h1>Změna hesla</h1>
<h5>Change Password</h5>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="popup" role="alert">
        <div class="popup-container">
            <p>@TempData["Success"]</p>
        </div>
    </div>
}
