@model IEnumerable<InfoSystem.Web.Models.UserAccessRequest.UserAccessRequestListingModel>

@{
    ViewData["Title"] = "User access requests";
    Layout = "~/Views/Shared/_SubpageLayout.cshtml";
}
    <h1>User access requests</h1>

<p>
    <a asp-action="Create" class="button alt">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Accept", "AcceptUserAccessRequest", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
