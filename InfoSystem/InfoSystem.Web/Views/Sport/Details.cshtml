@model InfoSystem.Web.Models.Sport.SportDetailModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SubpageLayout.cshtml";
}
@Html.HiddenFor(model => model.SportId)
<h1>Details</h1>

<div>
    <h4>Sport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUri)
        </dt>
        <dd class="col-sm-10">
            <img src=@Model.ImageUri?.ToString() />
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", "Sport", new { id = Model.SportId }, new { @class = "button" }) |
    <a asp-action="Index" class="button">Back to List</a>
</div>
